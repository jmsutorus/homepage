# ============================================================================
# SECRET MANAGEMENT STRATEGY
# ============================================================================
# In production (Firebase App Hosting), secrets are fetched from GCP Secret Manager
# at build time via the prebuild script (scripts/fetch-secrets.ts).
#
# In local development, use this .env.local file by copying this template:
#   cp .env.example .env.local
#
# See documentation/SECRET-MANAGEMENT.md for more information.
# ============================================================================

# Database
# For local SQLite: DATABASE_URL="file:./data/homepage.db"
# For Turso remote database:
DATABASE_URL="libsql://homepage-jmsutorus.aws-us-east-2.turso.io"
DATABASE_AUTH_TOKEN="your-turso-auth-token"

# Auth.js (NextAuth v5) - Session Management
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="generate-with-openssl-rand-base64-32"

# Firebase Client SDK (Public)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"

# Firebase Admin SDK (Server-side)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# Google OAuth (for Auth.js)
AUTH_GOOGLE_ID="your-google-client-id.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Github Auth
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""

# Strava Auth
AUTH_STRAVA_ID=""
AUTH_STRAVA_SECRET=""

# Strava API (Exercise Tracking)
STRAVA_CLIENT_ID="your-strava-client-id"
STRAVA_CLIENT_SECRET="your-strava-client-secret"

# Steam API (Gaming Status)
STEAM_API_KEY="your-steam-api-key"
STEAM_ID="your-steam-id-64-bit"

# Home Assistant (Smart Home)
HOMEASSISTANT_URL="http://homeassistant.local:8123"
HOMEASSISTANT_TOKEN="your-long-lived-access-token"

# Tautulli API (Plex Server Monitoring)
TAUTULLI_URL="http://localhost:8181"
TAUTULLI_API_KEY="your-tautulli-api-key"

# OMDb API (IMDB Integration for Media Search)
# Get your free API key at https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY="your-omdb-api-key"

# Google Books API (Book Search Integration)
# Optional - the API works without a key but with lower quota
# Get your free API key at https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY="your-google-books-api-key"

# Weather.gov API (US National Weather Service)
# Free API - no key required, US locations only
# User-Agent header required by weather.gov
WEATHER_APP_NAME="Homepage"
WEATHER_CONTACT_EMAIL="your-email@example.com"

# Feature Flags (optional)
ENABLE_STEAM="true"
ENABLE_STRAVA="true"
ENABLE_HOMEASSISTANT="true"
ENABLE_PLEX="true"
ENABLE_WEATHER="true"

# Cache TTL in seconds (optional)
CACHE_TTL_STRAVA="900"    # 15 minutes
CACHE_TTL_STEAM="300"     # 5 minutes
CACHE_TTL_HA="60"         # 1 minute
CACHE_TTL_PLEX="120"      # 2 minutes
CACHE_TTL_WEATHER="1800"  # 30 minutes

# Development
NODE_ENV="development"
